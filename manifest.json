{
  "manifest_version": 3,
  "name": "LinkedIn Text Formatter",
  "version": "1.0",
  "description": "Convert LinkedIn text to bold, italic, etc. using Unicode.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["clipboardWrite"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
